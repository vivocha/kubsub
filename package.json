{
  "name": "kubsub",
  "description": "Pub/Sub for Node.js using Kademlia and Quasar",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "commit": "git-cz",
    "check-coverage": "nyc check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "watch:test": "npm t -- -w",
    "test": "mocha --recursive test",
    "cover": "nyc --reporter=lcov --reporter=text npm t",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vivocha/kubsub.git"
  },
  "keywords": [
    "pubsub",
    "kad",
    "kademlia",
    "quasar",
    "nodejs",
    "typescript"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "author": "Federico Pinna <fpinna@vivocha.com> (http://www.vivocha.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vivocha/kubsub/issues"
  },
  "homepage": "https://github.com/vivocha/kubsub#readme",
  "devDependencies": {
    "@types/debug": "0.0.29",
    "@types/uuid": "2.0.29",
    "chai": "3.5.0",
    "chai-spies": "0.7.1",
    "codecov.io": "0.1.6",
    "commitizen": "2.8.6",
    "cz-conventional-changelog": "1.2.0",
    "ghooks": "1.3.2",
    "mocha": "3.1.2",
    "nyc": "8.3.1",
    "rimraf": "2.5.4",
    "semantic-release": "^4.3.5",
    "typescript": "2.0.3"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "_pre-commit": "npm run build && npm run cover && npm run check-coverage",
      "pre-commit": "npm run build && npm run cover"
    }
  },
  "dependencies": {
    "@types/node": "6.0.45",
    "debug": "2.2.0",
    "kad": "1.6.1",
    "kad-quasar": "1.0.1",
    "lru-cache": "4.0.1",
    "uuid": "2.0.3"
  }
}
